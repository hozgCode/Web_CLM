@model Web_CLM.Models.RegisterModel
@{
    ViewBag.Title = "注册";
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<h2>@ViewBag.Title</h2>

<form action="/Home/Register" class="form-horizontal" method="post" role="form">
    @Html.AntiForgeryToken()
    <h4>创建新帐户</h4>
    <hr />
    <div class="validation-summary-valid text-danger" data-valmsg-summary="true">
        <ul>
            @if (!String.IsNullOrWhiteSpace(ViewBag.ErrMsg))
            {
                <li>@ViewBag.ErrMsg</li>
            }
        </ul>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="UserName">用户名:</label>
        <div class="col-md-10">
            <input class="form-control" data-val="true" data-val-required="用户名不能为空。" id="userName" name="userName" type="text" value="" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="password">密码:</label>
        <div class="col-md-10">
            <input class="form-control" data-val="true" data-val-length="密码 必须至少包含 6 个字符。" data-val-length-max="100" data-val-length-min="6" data-val-required="密码 不能为空。" id="password" name="password" type="password" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="ConfirmPassword">确认密码:</label>
        <div class="col-md-10">
            <input class="form-control" data-val="true" data-val-equalto="密码和确认密码不匹配。" data-val-equalto-other="*.Password" id="ConfirmPassword" name="ConfirmPassword" type="password" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.IsAdmin, new { @checked=true })
                @Html.LabelFor(m => m.IsAdmin)
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="注册" />
        </div>
    </div>
</form>
